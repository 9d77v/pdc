FROM 9d77v/pdc-base:0.0.12
COPY . /app

ENV APP_NAME=pdc-iot-raspi
RUN cd /app \
    && go build  -o $APP_NAME -ldflags "-s -w" cmd/iot/raspi/main.go \
    && upx -9 $APP_NAME

FROM 9d77v/pdc-base-deploy:0.0.2
ENV APP_NAME=pdc-iot-raspi
COPY --from=0  /app/$APP_NAME /usr/bin/$APP_NAME

WORKDIR /app
CMD [ "pdc-iot-raspi" ]
